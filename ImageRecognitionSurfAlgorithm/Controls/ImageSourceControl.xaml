<UserControl
    x:Class="ImageRecognitionSurfAlgorithm.Controls.ImageSourceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageRecognitionSurfAlgorithm.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ImageRecognitionSurfAlgorithm.ViewModels"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="0,6,0,6"
            HorizontalAlignment="Center"
            d:Text="Название файла.png"
            Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ImageSourceControl}}, Path=CurrentImagePath, Converter={StaticResource FilePathToNameConverter}}" />
        <Border
            Grid.Row="1"
            Padding="1"
            BorderBrush="Gray"
            BorderThickness="1">
            <Image Source="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ImageSourceControl}}, Path=CurrentImagePath, UpdateSourceTrigger=PropertyChanged}" />
        </Border>
    </Grid>

</UserControl>
