<Window
    x:Class="ImageRecognitionSurfAlgorithm.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageRecognitionSurfAlgorithm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ImageRecognitionSurfAlgorithm.ViewModels"
    xmlns:controls="clr-namespace:ImageRecognitionSurfAlgorithm.Controls"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=False}"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:Width="600"
    d:Height="200"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Command="{Binding LoadSourceImageCommand}">
            Загрузить изображение
        </Button>
        <Button Grid.Row="0" Grid.Column="1" Command="{Binding LoadSourceImageCommand}">
            Обработать изображение
        </Button>

        <controls:ImageSourceControl Grid.Row="1" Grid.Column="0" ImagePath="{Binding SourceImagePath}" />
        <controls:ImageSourceControl Grid.Row="1" Grid.Column="1" ImagePath="{Binding ResultImagePath}" />

    </Grid>
</Window>
